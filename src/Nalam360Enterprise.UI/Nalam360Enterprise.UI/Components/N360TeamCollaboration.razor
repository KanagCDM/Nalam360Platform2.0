    private void CalculateActiveFilterCount()
    {
        _activeFilterCount = 0;
        if (_filter.Types.Any()) _activeFilterCount++;
        if (_filter.Visibilities.Any()) _activeFilterCount++;
        if (_filter.HasUnread == true) _activeFilterCount++;
        if (_filter.IsPinned == true) _activeFilterCount++;
        if (_filter.IsArchived == true) _activeFilterCount++;
        if (_filter.MinMembers.HasValue || _filter.MaxMembers.HasValue) _activeFilterCount++;
        if (_filter.CreatedAfter.HasValue || _filter.CreatedBefore.HasValue) _activeFilterCount++;
    }

