    .summary-card.info .card-icon { background: linear-gradient(135deg, #2196F3, #64B5F6); }
    .summary-card.accuracy .card-icon { background: linear-gradient(135deg, #4CAF50, #81C784); }

    .card-icon {
        width: 70px;
        height: 70px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        color: white;
        margin-right: 1.5rem;
    }

    .card-content {
        flex: 1;
    }

    .card-label {
        font-size: 0.9rem;
        color: #666;
        margin-bottom: 0.25rem;
    }

    .card-value {
        font-size: 2.5rem;
        font-weight: bold;
        color: #333;
        line-height: 1;
    }

    .card-subtext {
        font-size: 0.85rem;
