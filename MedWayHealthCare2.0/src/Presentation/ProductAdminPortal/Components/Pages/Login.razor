@page "/login"
@rendermode InteractiveServer
@inject AuthService AuthService
@inject ModuleService ModuleService
@inject NavigationService NavigationService
@inject NavigationManager Navigation

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <h1>üè• MedWay Admin Portal</h1>
            <p>Healthcare Management System</p>
        </div>

        @if (!showModuleSelection)
        {
            <div class="login-form">
                <h2>Sign In</h2>
                
                <div class="form-group">
                    <label>Username</label>
                    <input type="text" @bind="username" placeholder="Enter your username" class="form-control" />
                </div>

                <div class="form-group">
                    <label>Password</label>
                    <input type="password" @bind="password" placeholder="Enter your password" class="form-control" />
                </div>

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger">@errorMessage</div>
                }

                <button class="btn btn-primary btn-block" @onclick="HandleCredentialsSubmit" disabled="@isLoading">
                    @if (isLoading)
                    {
                        <span>Authenticating...</span>
                    }
                    else
                    {
                        <span>Continue ‚Üí</span>
                    }
                </button>

                <div class="demo-credentials">
                    <small>Demo credentials: admin / password</small>
                </div>

                <div class="registration-link">
                    <p>Don't have an account?</p>
                    <a href="/hospital/register" class="btn-link">Register Your Hospital</a>
                </div>
            </div>
        }
        else
        {
            <div class="module-selection">
                <h2>Select Your Modules</h2>
                <p class="subtitle">Choose the modules you want to access in this session</p>

                <div class="modules-grid">
                    @foreach (var module in availableModules)
                    {
                        <div class="module-card @(selectedModules.Contains(module.Id) ? "selected" : "")" 
                             @onclick="() => ToggleModule(module.Id)"
                             style="border-color: @module.Color">
                            <div class="module-icon" style="background-color: @module.Color">
                                @module.Icon
                            </div>
                            <div class="module-info">
                                <h3>@module.Name</h3>
                                <p>@module.Description</p>
                            </div>
                            @if (selectedModules.Contains(module.Id))
                            {
                                <div class="check-icon">‚úì</div>
                            }
                        </div>
                    }
                </div>

                <div class="module-actions">
                    <button class="btn btn-secondary" @onclick="BackToLogin">‚Üê Back</button>
                    <button class="btn btn-primary" @onclick="HandleLogin" disabled="@(!selectedModules.Any() || isLoading)">
                        @if (isLoading)
                        {
                            <span>Logging in...</span>
                        }
                        else
                        {
                            <span>Continue (@selectedModules.Count selected)</span>
                        }
                    </button>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .login-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 20px;
    }

    .login-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 20px 60px rgba(0,0,0,0.3);
        max-width: 900px;
        width: 100%;
        overflow: hidden;
    }

    .login-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 40px;
        text-align: center;
    }

    .login-header h1 {
        margin: 0 0 10px 0;
        font-size: 2.5rem;
        font-weight: 700;
    }

    .login-header p {
        margin: 0;
        opacity: 0.9;
        font-size: 1.1rem;
    }

    .login-form, .module-selection {
        padding: 40px;
    }

    .login-form h2, .module-selection h2 {
        margin: 0 0 10px 0;
        color: #333;
        font-weight: 600;
    }

    .subtitle {
        color: #666;
        margin-bottom: 30px;
    }

    .form-group {
        margin-bottom: 24px;
    }

    .form-group label {
        display: block;
        margin-bottom: 8px;
        font-weight: 500;
        color: #333;
    }

    .form-control {
        width: 100%;
        padding: 12px 16px;
        border: 2px solid #e0e0e0;
        border-radius: 8px;
        font-size: 16px;
        transition: border-color 0.3s;
    }

    .form-control:focus {
        outline: none;
        border-color: #667eea;
    }

    .btn {
        padding: 14px 28px;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .btn-primary:hover:not(:disabled) {
        transform: translateY(-2px);
        box-shadow: 0 8px 16px rgba(102, 126, 234, 0.4);
    }

    .btn-primary:disabled {
        opacity: 0.6;
        cursor: not-allowed;
    }

    .btn-secondary {
        background: #e0e0e0;
        color: #333;
    }

    .btn-secondary:hover {
        background: #d0d0d0;
    }

    .btn-block {
        width: 100%;
    }

    .alert {
        padding: 12px 16px;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .alert-danger {
        background: #fee;
        color: #c33;
        border: 1px solid #fcc;
    }

    .demo-credentials {
        text-align: center;
        margin-top: 20px;
        color: #999;
    }

    .registration-link {
        text-align: center;
        margin-top: 30px;
        padding-top: 20px;
        border-top: 1px solid #e0e0e0;
    }

    .registration-link p {
        margin: 0 0 10px 0;
        color: #666;
    }

    .btn-link {
        display: inline-block;
        color: #667eea;
        text-decoration: none;
        font-weight: 600;
        padding: 8px 16px;
        border-radius: 6px;
        transition: all 0.3s;
    }

    .btn-link:hover {
        background: #f0f0ff;
        color: #764ba2;
    }

    .modules-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 16px;
        margin-bottom: 30px;
    }

    .module-card {
        position: relative;
        border: 3px solid #e0e0e0;
        border-radius: 12px;
        padding: 20px;
        cursor: pointer;
        transition: all 0.3s;
        background: white;
    }

    .module-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 16px rgba(0,0,0,0.1);
    }

    .module-card.selected {
        border-width: 3px;
        background: #f5f5ff;
    }

    .module-icon {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 32px;
        margin-bottom: 16px;
        color: white;
    }

    .module-info h3 {
        margin: 0 0 8px 0;
        font-size: 18px;
        font-weight: 600;
        color: #333;
    }

    .module-info p {
        margin: 0;
        font-size: 14px;
        color: #666;
    }

    .check-icon {
        position: absolute;
        top: 12px;
        right: 12px;
        width: 28px;
        height: 28px;
        background: #4CAF50;
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
    }

    .module-actions {
        display: flex;
        gap: 16px;
        justify-content: space-between;
    }

    .module-actions .btn {
        flex: 1;
    }
</style>

@code {
    private string username = "";
    private string password = "";
    private string errorMessage = "";
    private bool showModuleSelection = false;
    private bool isLoading = false;
    private List<Module> availableModules = new();
    private List<string> selectedModules = new();

    protected override async Task OnInitializedAsync()
    {
        availableModules = await ModuleService.GetAvailableModulesAsync();
    }

    private void HandleCredentialsSubmit()
    {
        errorMessage = "";
        
        if (string.IsNullOrWhiteSpace(username) || string.IsNullOrWhiteSpace(password))
        {
            errorMessage = "Please enter both username and password";
            return;
        }

        // Simple validation - accept any non-empty credentials for demo
        showModuleSelection = true;
    }

    private void BackToLogin()
    {
        showModuleSelection = false;
        selectedModules.Clear();
    }

    private void ToggleModule(string moduleId)
    {
        if (selectedModules.Contains(moduleId))
        {
            selectedModules.Remove(moduleId);
        }
        else
        {
            selectedModules.Add(moduleId);
        }
    }

    private async Task HandleLogin()
    {
        if (!selectedModules.Any())
        {
            errorMessage = "Please select at least one module";
            return;
        }

        try
        {
            isLoading = true;
            StateHasChanged();
            
            await AuthService.LoginAsync(username, password, selectedModules);
            await NavigationService.BuildNavigationAsync(selectedModules);
            
            // Small delay to allow state propagation
            await Task.Delay(100);
            
            Navigation.NavigateTo("/dashboard", forceLoad: false);
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
            showModuleSelection = false;
            isLoading = false;
        }
    }
}
