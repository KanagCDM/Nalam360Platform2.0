# Environment Configuration Template
# Copy this file to .env and fill in the actual values

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=productadmin
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_me_in_production

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=your-super-secret-key-min-32-chars-long-for-production-use
JWT_ISSUER=ProductAdminPortal
JWT_AUDIENCE=ProductAdminPortal
JWT_EXPIRY_MINUTES=60

# OAuth 2.0 (Optional)
OAUTH_GOOGLE_CLIENT_ID=
OAUTH_GOOGLE_CLIENT_SECRET=
OAUTH_MICROSOFT_CLIENT_ID=
OAUTH_MICROSOFT_CLIENT_SECRET=

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000

# API Configuration
API_BASE_URL=http://localhost:5000/api/v1
API_VERSION=v1

# Frontend Configuration
REACT_APP_API_URL=http://localhost:5000/api/v1
REACT_APP_ENV=development

# Logging
LOG_LEVEL=Information
LOG_FILE_PATH=./logs/productadmin.log

# Email Service (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@productadmin.com
SMTP_FROM_NAME=ProductAdminPortal

# Payment Gateway (Optional - for future billing integration)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# Monitoring & Observability
SENTRY_DSN=
APPLICATION_INSIGHTS_KEY=

# Feature Flags
ENABLE_SIMULATION=true
ENABLE_AUDIT_LOGS=true
ENABLE_VERSIONING=true
ENABLE_DISCOUNT_CODES=true

# Performance
CACHE_EXPIRY_MINUTES=60
MAX_USAGE_RECORDS_PER_REQUEST=1000

# Security
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=1000
ENABLE_2FA=false

# Database Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Development Tools (disable in production)
ENABLE_SWAGGER=true
ENABLE_PGADMIN=true
ENABLE_REDIS_COMMANDER=true
