    }

    .popular-badge {
        background: rgba(255, 255, 255, 0.3);
        padding: 4px 12px;
        border-radius: 12px;
        font-size: 11px;
        font-weight: 700;
    }

    .plan-body {
        padding: 24px;
    }

    .price-section {
        text-align: center;
        margin-bottom: 16px;
    }

    .currency {
        font-size: 20px;
        color: #7f8c8d;
        vertical-align: top;
    }

    .price {
        font-size: 40px;
        font-weight: 700;
