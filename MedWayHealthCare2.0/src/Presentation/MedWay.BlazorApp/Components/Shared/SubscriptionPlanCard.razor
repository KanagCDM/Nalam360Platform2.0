@using MedWay.HospitalOnboarding.Application.DTOs

<div class="subscription-plan-card">
    <div class="plan-header" style="background: @GetGradient();">
        <h4>@Plan.Name</h4>
        @if (IsPopular)
        {
            <span class="popular-badge">POPULAR</span>
        }
    </div>
    <div class="plan-body">
        <div class="price-section">
            <span class="currency">$</span>
            <span class="price">@Plan.BaseMonthlyPrice</span>
            <span class="period">/month</span>
        </div>
        <p class="description">@Plan.Description</p>
        <ul class="features-list">
            <li><span class="e-icons e-check"></span> @Plan.IncludedUsers users included</li>
            <li><span class="e-icons e-check"></span> @Plan.IncludedBranches branches included</li>
            <li><span class="e-icons e-check"></span> @Plan.IncludedFacilities.Count facilities</li>
        </ul>
        @if (OnSelect.HasDelegate)
        {
            <button class="select-button" @onclick="HandleSelect">
                @(IsSelected ? "Selected" : "Select Plan")
            </button>
        }
    </div>
</div>

@code {
    [Parameter]
    public SubscriptionPlanDto Plan { get; set; } = null!;

    [Parameter]
    public bool IsPopular { get; set; }

    [Parameter]
    public bool IsSelected { get; set; }

    [Parameter]
    public EventCallback<Guid> OnSelect { get; set; }

    private async Task HandleSelect()
    {
        await OnSelect.InvokeAsync(Plan.Id);
    }

    private string GetGradient()
    {
        return Plan.Code switch
        {
            "BASIC" => "linear-gradient(135deg, #667eea 0%, #764ba2 100%)",
            "STANDARD" => "linear-gradient(135deg, #f093fb 0%, #f5576c 100%)",
            "PREMIUM" => "linear-gradient(135deg, #4facfe 0%, #00f2fe 100%)",
            _ => "linear-gradient(135deg, #a8edea 0%, #fed6e3 100%)"
        };
    }
}

