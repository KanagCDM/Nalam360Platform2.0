        color: white;
    }

    .countdown-icon {
        font-size: 48px;
        opacity: 0.9;
    }

    .countdown-content {
        flex: 1;
    }

    .countdown-content h4 {
        margin: 0 0 8px 0;
        font-size: 18px;
        font-weight: 600;
    }

    .days-remaining {
        font-size: 32px;
        font-weight: 700;
        margin: 0 0 4px 0;
    }

    .expiry-date {
        margin: 0 0 12px 0;
        opacity: 0.9;
        font-size: 14px;
    }

    .expired {
        font-size: 24px;
        font-weight: 700;
        color: #ff6b6b;
        margin: 0 0 12px 0;
    }

    .warning-message {
        display: flex;
        align-items: center;
        gap: 8px;
        background: rgba(255, 255, 255, 0.2);
        padding: 12px;
        border-radius: 6px;
        margin-bottom: 12px;
        font-size: 14px;
    }

    .warning-message.urgent {
        background: rgba(255, 107, 107, 0.3);
    }

    .progress-bar {
        width: 100%;
        height: 8px;
        background: rgba(255, 255, 255, 0.3);
