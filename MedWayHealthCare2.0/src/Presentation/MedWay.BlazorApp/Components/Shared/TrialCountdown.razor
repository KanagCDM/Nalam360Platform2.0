<div class="trial-countdown @CssClass">
    <div class="countdown-icon">
        <span class="e-icons e-time"></span>
    </div>
    <div class="countdown-content">
        <h4>Trial Period</h4>
        @if (DaysRemaining > 0)
        {
            <p class="days-remaining">@DaysRemaining days remaining</p>
            <p class="expiry-date">Expires on @TrialEndDate.ToString("MMMM dd, yyyy")</p>
            @if (DaysRemaining <= 7)
            {
                <div class="warning-message">
                    <span class="e-icons e-warning"></span>
                    <span>Your trial is ending soon. Subscribe to continue using all features.</span>
                </div>
            }
        }
        else
        {
            <p class="expired">Trial has expired</p>
            <div class="warning-message urgent">
                <span class="e-icons e-circle-close"></span>
                <span>Please subscribe to reactivate your account.</span>
            </div>
        }
        <div class="progress-bar">
            <div class="progress-fill" style="width: @ProgressPercentage%"></div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public DateTime TrialEndDate { get; set; }

    [Parameter]
    public string CssClass { get; set; } = string.Empty;

    [Inject]
    private ITimeProvider TimeProvider { get; set; } = null!

    private int DaysRemaining => Math.Max(0, (TrialEndDate - TimeProvider.UtcNow).Days);
    
    private int ProgressPercentage
    {
        get
        {
            const int trialDays = 30; // Assuming 30-day trial
            var daysUsed = trialDays - DaysRemaining;
            return (int)((daysUsed / (double)trialDays) * 100);
        }
    }
}

<style>
    .trial-countdown {
        display: flex;
        gap: 16px;
        padding: 20px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
