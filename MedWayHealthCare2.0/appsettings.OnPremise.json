{
  "//": "========================================",
  "//": "MedWayHealthCare 2.0 - ON-PREMISE Configuration",
  "//": "100% Cloud-Agnostic: PostgreSQL + Redis + Kafka",
  "//": "========================================",

  "DeploymentMode": "OnPremise",
  
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=medway;Username=medway_app;Password=MedWay@2025!Secure;Pooling=true;MinPoolSize=5;MaxPoolSize=100;"
  },
  
  "Caching": {
    "Provider": "Redis",
    "Redis": {
      "ConnectionString": "localhost:6379,abortConnect=false,connectRetry=3,connectTimeout=5000",
      "InstanceName": "medway:",
      "DefaultExpirationMinutes": 60,
      "SlidingExpirationMinutes": 30
    }
  },
  
  "Messaging": {
    "Provider": "Kafka",
    "Kafka": {
      "BootstrapServers": "localhost:9092",
      "GroupId": "medway-healthcare",
      "EnableAutoCommit": false,
      "AutoOffsetReset": "Earliest",
      "EnableIdempotence": true,
      "MaxInFlight": 5,
      "RetryBackoffMs": 100,
      "Topics": {
        "PatientEvents": "medway.patient.events",
        "AppointmentEvents": "medway.appointment.events",
        "ClinicalEvents": "medway.clinical.events",
        "BillingEvents": "medway.billing.events",
        "InventoryEvents": "medway.inventory.events",
        "NotificationEvents": "medway.notification.events"
      }
    }
  },
  
  "MultiTenancy": {
    "Enabled": true,
    "Strategy": "Database",
    "TenantResolution": "Header",
    "TenantHeaderName": "X-Tenant-ID"
  },
  
  "Authentication": {
    "JwtSecret": "MedWay_JWT_Secret_Key_CHANGE_IN_PRODUCTION_Minimum32Characters_2025",
    "JwtIssuer": "MedWayHealthCare",
    "JwtAudience": "MedWayHealthCareAPI",
    "JwtExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7,
    "EnableTwoFactorAuthentication": true
  },
  
  "Security": {
    "EnableCors": true,
    "AllowedOrigins": [
      "http://localhost:5002",
      "https://localhost:5003"
    ],
    "EnableRateLimiting": true,
    "RateLimitPerMinute": 100,
    "EnableAuditLogging": true
  },
  
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "System": "Warning"
    },
    "File": {
      "Enabled": true,
      "Path": "/var/log/medway",
      "RollingInterval": "Day",
      "RetentionDays": 30
    }
  },
  
  "HealthChecks": {
    "Enabled": true,
    "Endpoints": {
      "Liveness": "/health/live",
      "Readiness": "/health/ready",
      "Detailed": "/health"
    }
  },
  
  "Observability": {
    "ApplicationInsights": {
      "Enabled": false
    },
    "Prometheus": {
      "Enabled": true,
      "Endpoint": "/metrics"
    }
  }
}
