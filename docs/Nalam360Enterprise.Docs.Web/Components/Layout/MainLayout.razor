@inherits LayoutComponentBase

<div class="app-container">
    <div class="sidebar-wrapper">
        <NavMenu />
    </div>

    <div class="main-content-wrapper">
        <header class="app-header">
            <div class="header-content">
                <div class="header-left">
                    <button class="mobile-menu-toggle" onclick="document.querySelector('.sidebar-wrapper').classList.toggle('open')">
                        <span class="menu-icon">☰</span>
                    </button>
                    <div class="breadcrumb">
                        <span class="breadcrumb-item">Nalam360</span>
                        <span class="breadcrumb-separator">/</span>
                        <span class="breadcrumb-item">Enterprise UI</span>
                    </div>
                </div>
                <div class="header-right">
                    <a href="https://github.com/KanagCDM/Nalam360EnterprisePlatform" target="_blank" class="header-link">
